/* Demonstration der Bit-Operatoren in C0 */

#use <conio>
#use "printbits.c0"

int main() {
  int x = 42;

  printbits(x);
  println(" x");

  printbits(~x);
  println(" ~x");

  printbits(x & x);
  println(" x & x");

  printbits(x & ~x);
  println(" x & ~x");

  printbits(x | x);
  println(" x | x");

  printbits(x | ~x);
  println(" x | ~x");

  printbits(x ^ x);
  println(" x ^ x");

  printbits(x ^ ~x);
  println(" x ^ ~x");

  return 0;
}
